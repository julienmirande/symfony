{% extends 'base.html.twig' %}

{% block content %}
    <h1>Achat</h1>

    <table>
        <tbody>
            <tr>
                <th>Codeachat</th>
                <td>{{ achat.codeAchat }}</td>
            </tr>
            <tr>
                <th>Achatconfirme</th>
                <td>{% if achat.achatConfirme %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('Achat_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('Achat_edit', { 'codeAchat': achat.codeAchat }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
